<div id="contact-modal" class="fixed inset-0 z-[150] hidden items-center justify-center p-4">
  <div class="absolute inset-0 bg-slate-950/40 backdrop-blur-sm" id="contact-modal-overlay"></div>
  <div class="relative bg-white w-full max-w-xl rounded-[2.5rem] shadow-2xl overflow-hidden border border-slate-100 transform transition-all scale-95 opacity-0 duration-300 p-8 md:p-10" id="contact-modal-content">
    
    <!-- Close Button -->
    <button id="contact-close-modal" class="absolute top-6 right-8 text-slate-400 hover:text-slate-600 transition-colors bg-slate-50 p-2 rounded-full hover:bg-slate-100" aria-label="Cerrar">
