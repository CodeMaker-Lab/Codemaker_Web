      <p class="text-slate-500 text-lg">Elige la vía de contacto que prefieras</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Email Column -->
      <div class="flex flex-col gap-4">
        <p class="text-sm font-bold text-slate-400 uppercase tracking-widest text-center md:text-left ml-1">Escríbenos un mail</p>
        <a
          href="mailto:info@codemaker.es"
          class="group flex flex-col items-center md:items-start gap-3 bg-[#4D7CFF] hover:bg-[#3D6CEF] text-white p-5 md:p-6 rounded-[1.5rem] font-bold transition-all shadow-xl shadow-blue-100 hover:shadow-blue-200 active:scale-95"
        >
          <div class="bg-white/20 p-2.5 rounded-xl group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
