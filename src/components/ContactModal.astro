                <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
          <span class="text-base md:text-lg">info@codemaker.es</span>
        </a>
      </div>

      <!-- WhatsApp Column -->
      <div class="flex flex-col gap-4">
        <p class="text-sm font-bold text-slate-400 uppercase tracking-widest text-center md:text-left ml-1">Háblanos por WhatsApp</p>
        <a
          href="https://wa.me/34693062284"
          target="_blank"
          rel="noopener noreferrer"
          class="group flex flex-col items-center md:items-start gap-3 bg-[#76D172] hover:bg-[#66C162] text-white p-5 md:p-6 rounded-[1.5rem] font-bold transition-all shadow-xl shadow-green-100 hover:shadow-green-200 active:scale-95"
