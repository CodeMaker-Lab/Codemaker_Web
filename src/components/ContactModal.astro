      </div>
    </div>
  </div>
</div>

<script>
  const contactModal = document.getElementById('contact-modal');
  const contactModalContent = document.getElementById('contact-modal-content');
  const contactOverlay = document.getElementById('contact-modal-overlay');
  const contactCloseBtn = document.getElementById('contact-close-modal');

  function openContactModal() {
    contactModal?.classList.remove('hidden');
    contactModal?.classList.add('flex');
    
    // Trigger animation
    setTimeout(() => {
      contactModalContent?.classList.remove('scale-95', 'opacity-0');
      contactModalContent?.classList.add('scale-100', 'opacity-100');
    }, 10);
    
    // Disable body scroll
    document.body.style.overflow = 'hidden';
  }

  function closeContactModal() {
    contactModalContent?.classList.add('scale-95', 'opacity-0');
    contactModalContent?.classList.remove('scale-100', 'opacity-100');
    
    setTimeout(() => {
      contactModal?.classList.add('hidden');
      contactModal?.classList.remove('flex');
      document.body.style.overflow = '';
    }, 300);
  }

  // Listen for clicks on marked buttons
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    const trigger = target.closest('.contact-trigger');
    if (trigger) {
      e.preventDefault();
      openContactModal();
    }
  });

  contactOverlay?.addEventListener('click', closeContactModal);
  contactCloseBtn?.addEventListener('click', closeContactModal);

  // Close on Escape
  window.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !contactModal?.classList.contains('hidden')) {
      closeContactModal();
    }
  });
</script>
