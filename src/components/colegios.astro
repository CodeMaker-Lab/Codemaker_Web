---
import { getSchools } from "@/lib/google-sheets";

const allCentros = await getSchools();

const centrosActivos = allCentros.filter(c => c.status === 'live');
const centrosPasados = allCentros.filter(c => c.status === 'past');

const levelColors = {
  Junior: "bg-green-500",
  Senior: "bg-orange-500",
  Master: "bg-blue-500",
};

// Function to get a meaningful acronym
function getSchoolInitial(name: string) {
  if (!name) return '?';
  const parts = name.split(/\s+/);
  const skipWords = [
    'colegio', 'ceip', 'centro', 'escuela', 'ayuntamiento', 'ayto',
    'de', 'la', 'el', 'en', 'y', 'del', 'los', 'las'
  ];
  
  // Find all words that are not in skipWords
  const meaningfulWords = parts.filter(p => !skipWords.includes(p.toLowerCase()));
  
  if (meaningfulWords.length === 0) return parts[0]?.charAt(0).toUpperCase() || '?';
  
  // Take first letter of each meaningful word, max 3 letters
  return meaningfulWords
    .slice(0, 3)
    .map(word => word.charAt(0).toUpperCase())
    .join('');
}
---

<section
  id="colegios-modal"
  class="w-full py-10 px-6 sm:px-10 bg-white"
>
  <div class="max-w-5xl mx-auto space-y-12">
    <!-- SECCIÓN: EN CURSO -->
    <div>
      <div class="flex items-center gap-3 mb-6">
        <div class="w-3 h-3 rounded-full bg-green-500 animate-pulse"></div>
        <h3 class="text-2xl font-bold text-slate-900">Proyectos educativos en curso</h3>
      </div>
      
      <ul role="list" class="grid gap-4">
        {centrosActivos.map((colegio) => (
          <li class="bg-slate-50 border border-slate-100 shadow-sm rounded-xl p-6 flex flex-col lg:flex-row items-center gap-6">
            <div class="flex gap-x-4 flex-1 w-full lg:w-auto items-center">
              <!-- Stylized Avatar instead of Image -->
              <div 
                class="size-16 flex-none rounded-xl flex items-center justify-center text-white font-black uppercase text-2xl shadow-inner border border-white/20"
                style={`background-color: ${colegio.color || '#007AFB'}`}
              >
                {getSchoolInitial(colegio.nombre)}
              </div>
              
              <div class="flex-auto flex flex-col justify-center">
                <p class="text-lg font-bold text-gray-900 leading-tight">{colegio.nombre}</p>
                {colegio.direccion && <p class="mt-1 text-sm text-gray-500">{colegio.direccion}</p>}
              </div>
            </div>

            <div class="flex flex-wrap items-center gap-4 flex-1 justify-center lg:justify-start">
              {colegio.niveles?.map((nivel) => (
                <div class="flex items-center gap-2">
                  <div class={`w-3 h-3 rounded-full ${levelColors[nivel] || 'bg-gray-400'}`}></div>
                  <span class="text-sm font-semibold text-gray-700">{nivel}</span>
                </div>
              ))}
            </div>

            <div class="flex flex-col sm:flex-row items-center justify-end gap-3 w-full lg:w-auto">
              <a
                href={`/${colegio.id}`}
                class="w-full sm:w-auto text-center inline-flex justify-center items-center text-white transition duration-300 ease-in-out px-8 py-3 rounded-xl bg-[#007AFB] hover:bg-[#00477A] text-sm font-bold shadow-md"
              >
                Ver detalles
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="ml-2 size-4">
                  <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
                </svg>
              </a>
            </div>
          </li>
        ))}
      </ul>
    </div>

    <!-- SECCIÓN: HISTORIAL -->
    <div class="pt-8 border-t border-slate-100">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-3 h-3 rounded-full bg-slate-400"></div>
        <h3 class="text-2xl font-bold text-slate-700">Proyectos educativos finalizados</h3>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        {centrosPasados.map((colegio) => (
          <div class="bg-white border border-slate-100 p-4 rounded-xl flex items-center gap-4 hover:shadow-md transition-shadow">
            <div 
              class="size-10 flex-none rounded-lg flex items-center justify-center text-white font-bold uppercase text-xs shadow-sm bg-slate-400"
            >
              {getSchoolInitial(colegio.nombre)}
            </div>
            <div class="flex flex-col justify-center">
              <p class="text-sm font-bold text-slate-800 leading-tight">{colegio.nombre}</p>
              {colegio.direccion && <p class="text-xs text-slate-500 mt-0.5">{colegio.direccion}</p>}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
