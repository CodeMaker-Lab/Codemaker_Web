    <script>
      let pendingUrl = '';
      const modal = document.getElementById('demo-modal');
      const modalContent = document.getElementById('demo-modal-content');
      const overlay = document.getElementById('demo-modal-overlay');
      const closeBtn = document.getElementById('demo-close-modal');
      const confirmBtn = document.getElementById('demo-confirm-button');
      const demoButtons = document.querySelectorAll('.demo-button');
      const modalTitle = modalContent?.querySelector('h3');
      const modalBody = modalContent?.querySelector('.text-slate-600');

      // Store initial state
      const defaultTitle = modalTitle?.textContent || '';
      const defaultBody = modalBody?.innerHTML || '';
      const defaultCloseText = closeBtn?.textContent || 'Cancelar';

      function updateModalContent(isMobile: boolean) {
        if (!modalTitle || !modalBody || !confirmBtn || !closeBtn) return;

        if (isMobile) {
          modalTitle.textContent = 'Dispositivo no compatible';
          modalBody.innerHTML = `
            <p>
              Lo sentimos, esta aplicación <span class="font-bold text-red-500">no está disponible en móviles</span>.
            </p>
            <div class="bg-red-50 p-4 rounded-xl flex items-start gap-4 text-left border border-red-100 mt-4">
              <div class="text-red-500 shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
                  <line x1="12" y1="18" x2="12.01" y2="18"></line>
                </svg>
              </div>
              <p class="text-sm text-red-800">
                Esta herramienta requiere una pantalla más grande y un ratón. Por favor, accede desde un <span class="font-bold uppercase tracking-wider">PC o Tablet</span>.
              </p>
            </div>
          `;
          confirmBtn.style.display = 'none';
          closeBtn.textContent = 'Entendido';
          closeBtn.classList.remove('border-slate-200', 'text-slate-600', 'hover:bg-slate-50');
          closeBtn.classList.add('bg-slate-900', 'text-white', 'hover:bg-slate-800', 'border-transparent');
        } else {
          modalTitle.textContent = defaultTitle;
          modalBody.innerHTML = defaultBody;
          confirmBtn.style.display = '';
          closeBtn.textContent = defaultCloseText;
          
          // Restore button styles
          closeBtn.classList.add('border-slate-200', 'text-slate-600', 'hover:bg-slate-50');
          closeBtn.classList.remove('bg-slate-900', 'text-white', 'hover:bg-slate-800', 'border-transparent');
        }
      }

      function openModal(url: string) {
        pendingUrl = url;
        const isMobile = window.innerWidth < 768;
        
        updateModalContent(isMobile);

        modal?.classList.remove('hidden');
        modal?.classList.add('flex');
        
        // Trigger animation
        setTimeout(() => {
          modalContent?.classList.remove('scale-95', 'opacity-0');
          modalContent?.classList.add('scale-100', 'opacity-100');
        }, 10);
      }

      function closeModal() {
        modalContent?.classList.add('scale-95', 'opacity-0');
        modalContent?.classList.remove('scale-100', 'opacity-100');
        
        setTimeout(() => {
          modal?.classList.add('hidden');
          modal?.classList.remove('flex');
          pendingUrl = '';
        }, 300);
      }

      demoButtons.forEach(btn => {
        btn.addEventListener('click', (e) => {
          const url = (e.currentTarget as HTMLElement).dataset.href;
          if (url) openModal(url);
        });
      });

      overlay?.addEventListener('click', closeModal);
      closeBtn?.addEventListener('click', closeModal);
      confirmBtn?.addEventListener('click', () => {
        if (pendingUrl) {
          window.location.href = pendingUrl;
        }
      });

      // Close on Escape
      window.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !modal?.classList.contains('hidden')) {
          closeModal();
        }
      });
    </script>


