---
import Layout from "@/layouts/Layout.astro";
import Nav from "@/components/nav.astro";
import Footer from "@/components/footer.astro";
---

<Layout title="Aviso Legal | CodeMaker">
  <Nav />
  
  <main class="pt-32 pb-20 px-6 bg-[#00030F]">
    <div class="max-w-4xl mx-auto prose prose-invert prose-slate">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-10 text-center">Aviso Legal</h1>
      
