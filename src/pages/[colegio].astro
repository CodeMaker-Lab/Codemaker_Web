---
import Layout from "@/layouts/Layout.astro";
import Nav from "@/components/nav.astro";
import SchoolHero from "@/components/SchoolHero.astro";
import SchoolLevelCard from "@/components/SchoolLevelCard.astro";
import Footer from "@/components/footer.astro";
import { getSchools } from "@/lib/google-sheets";

export async function getStaticPaths() {
  const schools = await getSchools();
  return schools.map((school) => ({
    params: { colegio: school.id },
    props: { school },
  }));
}

const { school } = Astro.props;

// Filter levels based on the spreadsheet
const availableLevels = school.niveles as ('junior' | 'senior' | 'master')[];
