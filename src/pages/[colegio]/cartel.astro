---
import { getSchools } from "@/lib/google-sheets";
import LetterEffect from "@/components/LetterEffect.astro";
import QRCode from 'qrcode';

export async function getStaticPaths() {
  const schools = await getSchools();
  return schools.map((school) => ({
    params: { colegio: school.id },
    props: { school },
  }));
}

const { school } = Astro.props;

// Level descriptions for the poster
const levelInfo = {
  junior: {
    title: "Junior",
    subtitle: "3¬∫ a 6¬∫ de Primaria",
    desc: "Dise√±o 3D, Rob√≥tica e IA. Pasamos de ser usuarios a ser creadores tecnol√≥gicos.",
    color: "#22c55e"
  },
  senior: {
    title: "Senior",
    subtitle: "1¬∫ y 2¬∫ de ESO",
    desc: "Programaci√≥n profesional, electr√≥nica avanzada y realidad virtual.",
    color: "#f97316"
  },
  master: {
    title: "Master",
    subtitle: "3¬∫ ESO en adelante",
    desc: "Desarrollo de proyectos reales, IA aplicada y lenguajes de alto nivel.",
    color: "#a855f7"
  }
};

const availableLevels = school.niveles as ('junior' | 'senior' | 'master')[];

// Generate QR Code
const schoolUrl = `https://codemaker.es/${school.id}`;
const qrCodeDataUrl = await QRCode.toDataURL(schoolUrl, {
  color: { dark: '#00477A', light: '#FFFFFF' },
  margin: 1,
  width: 600
});
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>POSTER A3 - {school.nombre}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat+Alternates:wght@400;700;900&display=swap" rel="stylesheet" />
    <style is:global>
        :root {
            --school-color: {school.color};
            --primary: #00477A;
            --blue-bright: #007AFB;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Montserrat Alternates", sans-serif;
            -webkit-print-color-adjust: exact;
        }

        body {
            background: white;
            width: 297mm;
            height: 420mm;
            overflow: hidden;
        }

        @page {
            size: A3 portrait;
            margin: 0;
        }

        .poster-grid {
            width: 100%;
            height: 100%;
            display: grid;
            grid-template-rows: auto auto 1fr auto;
            background: white;
        }

        .patron-puntos {
            background-image: radial-gradient(rgba(0, 71, 122, 0.05) 1.5px, transparent 1.5px);
            background-size: 20px 20px;
        }

        /* HEADER */
        .header {
            background: var(--blue-bright);
            color: white;
            padding: 30mm 20mm;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

        .header-content {
            z-index: 10;
        }

        .header-logo {
            height: 25mm;
            width: auto;
            margin-bottom: 8mm;
        }

        .school-chip {
            background: var(--school-color);
            padding: 2mm 6mm;
            border-radius: 50px;
            font-weight: 900;
            font-size: 14pt;
            display: inline-block;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            margin-bottom: 5mm;
        }

        .header h1 {
            font-weight: 900;
            font-size: 28pt;
            line-height: 1.1;
            text-transform: uppercase;
            letter-spacing: -1px;
        }

        .letter-effect-container {
            width: 80mm;
            height: 80mm;
            display: flex;
            align-items: center;
            justify-content: center;
            scale: 1.5;
            transform-origin: center right;
        }

        /* INTRO */
        .intro-banner {
            padding: 10mm 20mm;
            text-align: center;
            background: #f8fafc;
            border-bottom: 1px solid #e2e8f0;
        }

        .intro-banner p {
            font-size: 16pt;
            font-weight: 700;
            color: #1e293b;
            max-width: 80%;
            margin: 0 auto;
        }

        /* MAIN COLUMNAR CONTENT */
        .content-area {
            display: grid;
            grid-template-columns: 1.2fr 0.8fr;
            gap: 15mm;
            padding: 15mm 20mm;
            align-items: start;
        }

        .levels-column h2, .groups-column h2 {
            font-size: 18pt;
            font-weight: 900;
            color: var(--primary);
            text-transform: uppercase;
            margin-bottom: 10mm;
            border-bottom: 3px solid var(--primary);
            display: inline-block;
            padding-bottom: 2mm;
        }

        .level-card {
            border-left: 8px solid var(--lvl-color);
            background: #fff;
            padding: 6mm;
            border-radius: 0 15px 15px 0;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
            margin-bottom: 8mm;
        }

        .level-card h3 {
            font-size: 16pt;
            font-weight: 900;
            color: var(--lvl-color);
            margin-bottom: 1mm;
        }

        .level-card span {
            font-size: 10pt;
            font-weight: 700;
            color: #64748b;
            display: block;
            margin-bottom: 3mm;
        }

        .level-card p {
            font-size: 11pt;
            line-height: 1.4;
            color: #334155;
            font-weight: 500;
        }

        .group-row {
            background: #f1f5f9;
            padding: 5mm;
            border-radius: 12px;
            margin-bottom: 4mm;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid #e2e8f0;
        }

        .group-info h4 {
            font-size: 13pt;
            font-weight: 900;
            color: #1e293b;
        }

        .group-info p {
            font-size: 10pt;
            font-weight: 600;
            color: #475569;
        }

        .group-price {
            font-size: 15pt;
            font-weight: 900;
            color: var(--primary);
        }

        /* FOOTER / ACTION */
        .footer-action {
            background: var(--primary);
            margin: 10mm 20mm 20mm;
            border-radius: 25px;
            padding: 10mm;
            display: grid;
            grid-template-columns: 1fr auto;
            gap: 10mm;
            color: white;
            align-items: center;
            box-shadow: 0 10px 40px rgba(0,71,122,0.3);
        }

        .footer-text h2 {
            font-size: 24pt;
            font-weight: 900;
            margin-bottom: 5mm;
            text-transform: uppercase;
        }

        .teacher-box {
            background: rgba(255,255,255,0.1);
            padding: 5mm;
            border-radius: 15px;
            border: 1px solid rgba(255,255,255,0.1);
            display: flex;
            align-items: center;
            gap: 5mm;
        }

        .teacher-icon {
            font-size: 25pt;
        }

        .teacher-details p:first-child {
            font-size: 9pt;
            font-weight: 900;
            text-transform: uppercase;
            color: #93c5fd;
            margin-bottom: 1mm;
        }

        .teacher-details p:nth-child(2) {
            font-size: 13pt;
            font-weight: 700;
        }

        .teacher-details p:last-child {
            font-size: 10pt;
            opacity: 0.8;
        }

        .qr-container {
            background: white;
            padding: 4mm;
            border-radius: 20px;
            text-align: center;
        }

        .qr-container img {
            width: 45mm;
            height: 45mm;
        }

        .qr-container p {
            color: var(--primary);
            font-weight: 900;
            font-size: 8pt;
            margin-top: 2mm;
            text-transform: uppercase;
        }
    </style>
</head>
<body class="patron-puntos">
    <div class="poster-grid">
        <!-- 1. HEADER -->
        <header class="header">
            <div class="header-content">
                <img src="/svg/Logo.svg" alt="Logo" class="header-logo" />
                <div>
                    <div class="school-chip">{school.nombre}</div>
                    <h1>Aprende las tecnolog√≠as<br>del <span style="color: #FFC800">futuro-presente</span></h1>
                </div>
            </div>
            <div class="letter-effect-container">
                <LetterEffect />
            </div>
        </header>

        <!-- 2. INTRO BANNER -->
        <div class="intro-banner">
            <p>Formamos a los creadores tecnol√≥gicos del ma√±ana con Programaci√≥n, Rob√≥tica, Dise√±o 3D e IA.</p>
        </div>

        <!-- 3. MAIN CONTENT -->
        <main class="content-area">
            <!-- Left: Levels -->
            <div class="levels-column">
                <h2>Qu√© aprendemos</h2>
                {availableLevels.map(lvl => (
                    <div class="level-card" style={`--lvl-color: ${levelInfo[lvl].color}`}>
                        <h3>{levelInfo[lvl].title}</h3>
                        <span>{levelInfo[lvl].subtitle}</span>
                        <p>{levelInfo[lvl].desc}</p>
                    </div>
                ))}
            </div>

            <!-- Right: Groups -->
            <div class="groups-column">
                <h2>Horarios {school.curso}</h2>
                {school.grupos.map((grupo, index) => (
                    <div class="group-row">
                        <div class="group-info">
                            <h4>Grupo {index + 1}</h4>
                            <p>{grupo.horario}</p>
                            <p style={`color: ${levelInfo[grupo.nivel.toLowerCase() as keyof typeof levelInfo]?.color || '#64748b'}; font-size: 8pt; text-transform: uppercase; font-weight: 900;`}>
                                {grupo.nivel}
                            </p>
                        </div>
                        <div class="group-price">{grupo.precio}</div>
                    </div>
                ))}
            </div>
        </main>

        <!-- 4. FOOTER ACTION -->
        <footer class="footer-action">
            <div class="footer-text">
                <h2>¬°Inscr√≠bete ahora!</h2>
                <div class="teacher-box">
                    <div class="teacher-icon">üë®‚Äçüè´</div>
                    <div class="teacher-details">
                        <p>Responsable Docente</p>
                        <p>{school.info_docente}</p>
                        <p>{school.info_contacto}</p>
                    </div>
                </div>
            </div>
            <div class="qr-container">
                <img src={qrCodeDataUrl} alt="QR de inscripci√≥n" />
                <p>Escanea para<br>reservar plaza</p>
            </div>
        </footer>
    </div>
</body>
</html>
